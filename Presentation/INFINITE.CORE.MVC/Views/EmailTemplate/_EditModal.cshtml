<div class="modal fade" id="EmailTemplateEditModal" tabindex="-1" role="dialog" aria-labelledby="EmailTemplateEditModalLabel" data-backdrop="static">
    <div class="modal-dialog modal-lg" role="document">
        <div class="modal-content">
            @await Html.PartialAsync("~/Views/Shared/Components/Modals/_ModalHeader.cshtml", new ModalHeaderViewModel("Edit EmailTemplate"))
            <form id="EmailTemplateEditForm" name="EmailTemplateEditForm" role="form" class="form-horizontal">
                <input type="hidden" id="Id_edit" name="Id" />
                <div class="modal-body">
                    <div class="form-group row required">
                        <label class="col-md-3 col-form-label" for="Module">Module</label>
                        <div class="col-md-9">
                            <input id="Module_edit" type="text" name="Module" class="form-control" required>
                        </div>
                    </div>
                    <div class="form-group row required">
                        <label class="col-md-3 col-form-label" for="MailFrom">Mail From</label>
                        <div class="col-md-9">
                            <input id="MailFrom_edit" type="text" name="MailFrom" class="form-control" required>
                        </div>
                    </div>
                    <div class="form-group row required">
                        <label class="col-md-3 col-form-label" for="DisplayName">Display Name</label>
                        <div class="col-md-9">
                            <input id="DisplayName_edit" type="text" name="DisplayName" class="form-control" required>
                        </div>
                    </div>
                    <div class="form-group row required">
                        <label class="col-md-3 col-form-label" for="Subject">Subject</label>
                        <div class="col-md-9">
                            <input id="Subject_edit" type="text" name="Subject" class="form-control" required>
                        </div>
                    </div>
                    <div class="form-group row required">
                        <label class="col-md-3 col-form-label" for="MailContent">Mail Content</label>
                        <div class="col-md-9">
                            <input id="MailContent_edit" type="text" name="MailContent" class="form-control" required>
                        </div>
                    </div>
                </div>
                @await Html.PartialAsync("~/Views/Shared/Components/Modals/_ModalFooterWithSaveAndCancel.cshtml")
            </form>
        </div>
    </div>
</div>