@using INFINITE.CORE.Data.Provider
@{
    ViewBag.CurrentPageName = Pages.EmailTemplate;
}
<section class="content-header">
    <div class="container-fluid">
        <div class="row">
            <div class="col-sm-6">
                <h1>@ViewBag.CurrentPageName</h1>
            </div>
            <div class="col-sm-6">
                <a href="javascript:;" data-toggle="modal" data-target="#EmailTemplateCreateModal" class="btn bg-blue float-sm-right">
                    <i class="fa fa-plus-square"></i>
                    Create
                </a>
            </div>
        </div>
    </div>
</section>
<section class="content">
    <div class="container-fluid">
        <div class="row">
            <div class="col-12">
                <div class="card">
                    <div class="card-header">
                    </div>
                    <div class="card-body">
                        <div class="table-responsive">
                            <table id="EmailTemplateTable" class="table table-striped table-bordered">
                                <thead>
                                    <tr>
                                        <th></th>
                                        <th>Module</th>
                                        <th>Mail From</th>
                                        <th>Display Name</th>
                                        <th>Subject</th>
                                        <th>Mail Content</th>
                                        <th>Create By</th>
                                        <th>Create Date</th>
                                        <th>Modified By</th>
                                        <th>Modified Date</th>
                                        <th>Action</th>
                                    </tr>
                                </thead>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

@await Html.PartialAsync("~/Views/EmailTemplate/_CreateModal.cshtml")
@await Html.PartialAsync("~/Views/EmailTemplate/_EditModal.cshtml")

@section scripts
    {
    <environment names="Development,Staging,Production">
        <script src="~/view-resources/Views/EmailTemplate/Index.js" asp-append-version="true"></script>
    </environment>
}
