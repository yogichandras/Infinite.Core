<div class="modal fade" id="UserEditModal" tabindex="-1" user="dialog" aria-labelledby="UserEditModalLabel" data-backdrop="static">
    <div class="modal-dialog modal-lg" user="document">
        <div class="modal-content">
            @await Html.PartialAsync("~/Views/Shared/Components/Modals/_ModalHeader.cshtml", new ModalHeaderViewModel("Edit User"))
            <form id="UserEditForm" name="UserEditForm" user="form" class="form-horizontal">
                <div class="modal-body">
                    <input id="userid_edit" type="hidden" name="Id">
                    <div class="form-group row required">
                        <label class="col-md-3 col-form-label" for="Fullname">Full Name</label>
                        <div class="col-md-9">
                            <input id="Fullname_edit" type="text" name="Fullname" class="form-control" required maxlength="32" minlength="2">
                        </div>
                    </div>
                    <div class="form-group row required">
                        <label class="col-md-3 col-form-label" for="Username">Username</label>
                        <div class="col-md-9">
                            <input id="Username_edit" type="text" name="Username" class="form-control" required maxlength="32" minlength="2" readonly>
                        </div>
                    </div>
                    <div class="form-group row required">
                        <label class="col-md-3 col-form-label" for="Mail">Mail</label>
                        <div class="col-md-9">
                            <input id="Mail_edit" type="text" name="Mail" class="form-control" required maxlength="32" minlength="2">
                        </div>
                    </div>
                    <div class="form-group row required">
                        <label class="col-md-3 col-form-label" for="PhoneNumber">Phone Number</label>
                        <div class="col-md-9">
                            <input id="PhoneNumber_edit" type="text" name="PhoneNumber" class="form-control" maxlength="32" minlength="2">
                        </div>
                    </div>
                    <div class="form-group row">
                        <label class="col-md-3 col-form-label">Roles</label>
                        <div class="col-md-9">
                            <div class="row" id="row-roles-edit">
                            </div>
                        </div>
                    </div>
                </div>
                @await Html.PartialAsync("~/Views/Shared/Components/Modals/_ModalFooterWithSaveAndCancel.cshtml")
            </form>
        </div>
    </div>
</div>