@using INFINITE.CORE.MVC.Models
@{
    Layout = null;
}
<div class="modal fade" id="UserCreateModal" tabindex="-1" User="dialog" aria-labelledby="UserCreateModalLabel" data-backdrop="static">
    <div class="modal-dialog modal-lg" User="document">
        <div class="modal-content">
            @await Html.PartialAsync("~/Views/Shared/Components/Modals/_ModalHeader.cshtml", new ModalHeaderViewModel("Create User"))
            <form id="UserCreateForm" name="UserCreateForm" User="form" class="form-horizontal">
                <div class="modal-body">
                    <div class="form-group row required">
                        <label class="col-md-3 col-form-label" for="Fullname">Full Name</label>
                        <div class="col-md-9">
                            <input id="Fullname" type="text" name="Fullname" class="form-control" required maxlength="32" minlength="2">
                        </div>
                    </div>
                     <div class="form-group row required">
                       <label class="col-md-3 col-form-label" for="Username">Username</label>
                        <div class="col-md-9">
                            <input id="Username" type="text" name="Username" class="form-control" required maxlength="32" minlength="2">
                        </div>
                    </div>
                    <div class="form-group row required">
                        <label class="col-md-3 col-form-label" for="Password">Password</label>
                        <div class="col-md-9">
                            <input id="Password" type="password" name="Password" class="form-control" required maxlength="32" minlength="2">
                        </div>
                    </div>
                     <div class="form-group row required">
                        <label class="col-md-3 col-form-label" for="Mail">Mail</label>
                        <div class="col-md-9">
                            <input id="Mail" type="text" name="Mail" class="form-control" required maxlength="32" minlength="2">
                        </div>
                    </div>
                    <div class="form-group row required">
                        <label class="col-md-3 col-form-label" for="PhoneNumber">Phone Number</label>
                        <div class="col-md-9">
                            <input id="PhoneNumber" type="text" name="PhoneNumber" class="form-control" maxlength="32" minlength="2">
                        </div>
                    </div>
                    <div class="form-group row">
                        <label class="col-md-3 col-form-label">Roles</label>
                        <div class="col-md-9">
                            <div class="row" id="row-roles">
                            </div>
                        </div>
                    </div>
                </div>
                @await Html.PartialAsync("~/Views/Shared/Components/Modals/_ModalFooterWithSaveAndCancel.cshtml")
            </form>
        </div>
    </div>
</div>
